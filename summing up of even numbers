#include <stdio.h>

int main() {
    int n, sum = 0;
    
    printf("Enter the range: ");
    scanf("%d", &n);
    
    printf("Even numbers from 1 to %d:\n", n);
    
    for (int i = 2; i <= n; i += 2) {
        printf("%d ", i);
        sum += i;
    }
    
    printf("\nThe sum of even numbers from 1 to %d is: %d", n, sum);
    
    return 0;
}
